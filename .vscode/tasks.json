{
        // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "Packwiz-RefreshIndex",
                        "type": "shell",
                        "command": "packwiz refresh --build --yes"
                },
                {
                        "label": "Packwiz-UpdatePack",
                        "dependsOn": ["Packwiz-RefreshIndex"],
                        "type": "shell",
                        "command": "packwiz update --all --yes"
                },
                {
                        "label": "Git-CommitPackwizUpdate-AddMods",
                        "type": "shell",
                        "command": "git add mods/*.*"
                },{
                        "label": "Git-CommitPackwizUpdate-AddIndexToml",
                        "type": "shell",
                        "command": "git add index.toml"
                },{
                        "label": "Git-CommitPackwizUpdate-AddPackToml",
                        "type": "shell",
                        "command": "git add pack.toml"
                },
                {
                        "label": "Git-CommitPackwizUpdate",
                        "dependsOn": ["Git-CommitPackwizUpdate-AddMods","Git-CommitPackwizUpdate-AddIndexToml","Git-CommitPackwizUpdate-AddPackToml"],
                        "type": "shell",
                        "command": "git commit -m \"fix: Update Packwiz Pack [VSCode Run]\""
                }
        ]
}
